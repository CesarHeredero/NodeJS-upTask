mixin crearProyecto(proyecto = {})

    form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST")
        .campo
            label(for="nombre") Nombre proyecto:
            input(value=proyecto.nombre type="text" name="nombre" placeholder="Nuevo proyecto")#nombre
        .campo.enviar 
            input(type="submit" value=`${proyecto.nombre ? 'Editar' : 'Crear'}`).boton